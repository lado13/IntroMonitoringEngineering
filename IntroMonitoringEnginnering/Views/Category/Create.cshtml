@using IntroMonitoringEngineering.ViewModel.Category
@model CategoryCreate

<h2 class="text-light">Create Category</h2>

<div class="container field w-25 description-text">

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label text-light m-3">Category Title</label>
            <input asp-for="Title" class="form-control" value="@Model?.Title" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
       
        <div class="form-group mt-4">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

</div>

