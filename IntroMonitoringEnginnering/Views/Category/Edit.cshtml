@model IntroMonitoringEnginnering.Models.Category

<h2 class="text-light m-auto">Edit Category</h2>

<div class="container field w-25 description-text">
    <form asp-action="Edit" asp-controller="Category" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Title" class="control-label text-light m-3"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group mt-4">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>


